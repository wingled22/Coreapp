@model CoreApp.Entities.Products
<!-- Modal -->
<div class="modal fade" id="addCategory" tabindex="-1" role="dialog" aria-labelledby="addCategoryLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryLabel">Are you sure you want to delete?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-action="Delete">

                    <input name="IsDelete" type="hidden" value="True" />

                    <input type="hidden" asp-for="@Model.Id" />

                    <div class="form-group">
                        <label asp-for="Name"> @Model.Name</label>
                    </div>


                    <div class="form-group">
                        <label asp-for="Price"> @Model.Price</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="QuantityPerUnit"> @Model.QuantityPerUnit</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId"> @Model.CategoryId</label>
                    </div>


                    <div class="form-group">
                        <label asp-for="StoreId"> @Model.StoreId</label>
                    </div>

                    @*<div class="form-group">
                        <label asp-for="Available"> @Model.Available</label>
                    </div>*@

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>